#:kivy 2.0.0
# basket_screen.kv

<BasketScreen>:
    name: 'basket_screen'

    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: basket_items_grid
                cols: 1
                row_default_height: dp(50)
                row_force_default: True
                spacing: dp(10)
                padding: [dp(10), dp(10)]
                size_hint_y: None
                height: self.minimum_height

        # Total Price Label
        Label:
            text: "Total Price: {:.2f} $".format(root.total_price)
            color: 1, 1, 1, 1  # Белый цвет
            bold: True
            size_hint_y: None
            height: dp(30)
            halign: 'center'
            valign: 'middle'
            text_size: self.size

        Label:
            text: ''
            id: offer_message
            color: 1, 1, 1, 1  # Белый цвет
            bold: True
            size_hint_y: None
            height: dp(30)
            halign: 'center'
            valign: 'middle'
            text_size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.95
            pos_hint: {'center_x': 0.5}
            size_hint_y: None
            height: dp(50)  
            spacing: dp(10)



            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(10)]  

            TextInput:
                id: offer_code
                hint_text: 'Offer Code *'
                multiline: False
                font_size: sp(19)
                size_hint_y: None
                height: dp(45)
                background_normal: ''
                background_active: ''
                background_color: (0, 0, 0, 0)
                padding: [dp(20), dp(12)]
                cursor_color: 0.87, 0.42, 0.16, 1
                selection_color: 0.87, 0.42, 0.16, 0.5
                on_text: root.check_offer_code(self.text)


        
        # Buttons Layout
        BoxLayout:
            size_hint_y: None
            height: dp(60)
            padding: [dp(10), dp(0)]
            spacing: dp(10)
            
            # Кнопка назад с иконкой стрелки
            Button:
                size_hint_x: 0.5
                background_normal: ''
                background_color: 0, 0, 0, 0  # Make background transparent
                on_release: app.root.current = 'menu_screen'
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # Белый цвет
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(10)]
                # Вставка изображения стрелки внутрь кнопки
                Image:
                    source: 'assets/images/back_arrow.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size_hint: None, None
                    size: dp(24), dp(24)
                    allow_stretch: True
                    keep_ratio: True
            
            # Кнопка "Place Order"
            Button:
                text: "Place Order"
                size_hint_x: 0.5
                background_normal: ''
                background_color: 0, 0, 0, 0  # Make background transparent
                color: 0, 0, 0, 1  # Черный цвет текста
                on_release: root.place_order()
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # Белый цвет
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(10)]
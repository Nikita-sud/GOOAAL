#:kivy 2.0.0
# basket_screen.kv

<BasketScreen>:
    name: 'basket_screen'

    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size
            
    
    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)

        BoxLayout:
            size_hint_y: None
            height: dp(50)
            Button:
                text: "Back"
                size_hint_x: 0.2
                on_release: app.root.current = 'menu_screen'

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: basket_items_grid
                cols: 1
                row_default_height: dp(50)
                row_force_default: True
                spacing: dp(10)
                padding: [dp(10), dp(10)]
                size_hint_y: None
                height: self.minimum_height
                

        
        BoxLayout:
            size_hint_y: None
            height: dp(60)
            padding: [dp(10), dp(0)]
            Label:
                text: "Total Price: " + root.total_price
                color: 0, 0, 0, 1
                size_hint_x: 0.7

            Button:
                text: "Place Order"
                size_hint_x: 0.3
                background_color: 0.8, 0.4, 0.1, 1
                color: 1, 1, 1, 1
                on_release: root.place_order()
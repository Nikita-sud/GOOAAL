#:kivy 2.0.0
# product_card_mini.kv

<ProductCardMini>:
    orientation: 'horizontal'
    padding: dp(10)
    height: dp(50)

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(10)]

    # Название товара
    Label:
        text: root.product_name
        size_hint_x: 0.4
        color: 0, 0, 0, 1

    # Кнопка уменьшения количества
    Button:
        text: "-"
        size_hint: None, None
        size: dp(30), dp(30)
        on_release: root.decrease_quantity()
        background_normal: ''
        background_color: 0, 0, 0, 0
        canvas.before:
            Color:
                rgba: 1, 0.5, 0, 1  # Оранжевый цвет
            Ellipse:
                pos: self.pos
                size: self.size

    # Отображение количества
    Label:
        text: str(root.quantity)
        size_hint_x: 0.1
        color: 0, 0, 0, 1

    # Кнопка увеличения количества
    Button:
        text: "+"
        size_hint: None, None
        size: dp(30), dp(30)
        on_release: root.increase_quantity()
        background_normal: ''
        background_color: 0, 0, 0, 0
        canvas.before:
            Color:
                rgba: 1, 0.5, 0, 1  # Оранжевый цвет
            Ellipse:
                pos: self.pos
                size: self.size

    # Цена за количество
    Label:
        text: f"${root.price * root.quantity:.2f}"
        size_hint_x: 0.2
        color: 0, 0, 0, 1
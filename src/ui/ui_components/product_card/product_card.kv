#:kivy 2.0.0
# product_card.kv

<ProductCard>:
    orientation: 'vertical'
    padding: dp(10)
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(10)]
            
    Image:
        source: root.image_source
        size_hint_y: 0.7
        fit_mode: 'contain'

    Label:
        text: root.product_name + "\n" + root.price
        color: 0, 0, 0, 1
        halign: 'center'
        valign: 'middle'
        font_size: sp(15)

    Button:
        text: 'Add to basket'
        size_hint_y: 0.2
        background_color: 0.8, 0.4, 0.1, 1
        color: 1, 1, 1, 1
        on_release: root.add_to_basket()
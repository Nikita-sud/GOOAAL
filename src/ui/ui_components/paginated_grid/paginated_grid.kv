#:kivy 2.0.0
# paginated_grid.kv

<PaginatedGrid>:
    orientation: 'vertical'
    product_carousel: product_carousel

    Carousel:
        id: product_carousel
        direction: 'right'

        BoxLayout:
            id: drinks_slide
            on_kv_post: root.drinks_slide = self
            orientation: 'vertical'
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    id: drinks_grid
                    cols: 2
                    row_default_height: dp(200)
                    row_force_default: True
                    spacing: dp(10)
                    padding: [dp(10), dp(10)]
                    size_hint_y: None
                    height: self.minimum_height

        BoxLayout:
            id: pizza_slide
            on_kv_post: root.pizza_slide = self
            orientation: 'vertical'
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    id: pizza_grid
                    cols: 2
                    row_default_height: dp(200)
                    row_force_default: True
                    spacing: dp(10)
                    padding: [dp(10), dp(10)]
                    size_hint_y: None
                    height: self.minimum_height

        BoxLayout:
            id: desserts_slide
            on_kv_post: root.desserts_slide = self
            orientation: 'vertical'
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    id: desserts_grid
                    cols: 2
                    row_default_height: dp(200)
                    row_force_default: True
                    spacing: dp(10)
                    padding: [dp(10), dp(10)]
                    size_hint_y: None
                    height: self.minimum_height
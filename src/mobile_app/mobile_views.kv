#:kivy 2.0.0
BoxLayout:
    orientation: 'vertical'
    
    Label:
        text: 'Menu'
        font_size: 32

    ScrollView:
        GridLayout:
            id: pizza_menu
            cols: 1
            size_hint_y: None
            height: self.minimum_height

    Label:
        text: 'Enter Database Credentials'
        font_size: 20

    TextInput:
        id: username_input
        hint_text: 'Username'
        multiline: False

    TextInput:
        id: password_input
        hint_text: 'Password'
        password: True  # Поле для ввода пароля (затемнённое)
        multiline: False

    Button:
        text: 'Order'
        size_hint_y: 0.1
        on_release: app.order_pizza()
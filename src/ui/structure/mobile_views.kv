#:kivy 2.0.0

<ColoredScreen>:
    canvas.before:
        Color:
            rgba: self.background_color  # Используем 'self', так как это свойство виджета
        Rectangle:
            pos: self.pos
            size: self.size

ScreenManager:
    id: screen_manager

    # Login Screen
    ColoredScreen:
        name: 'login_screen'
        id: login_screen

        BoxLayout:

            canvas.before:
                Color:
                    rgba: (0.87, 0.42, 0.16, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: 'vertical'
                spacing: 20
                padding: [20, 20]

                BoxLayout:
                    size_hint_y: 0.9
                    canvas:
                        Color:
                            rgb: 1, 1, 1
                        Ellipse:
                            pos: 100, 500
                            size: dp(200), dp(200)
                            source: 'la_logo.webp'
                            angle_start: 0
                            angle_end: 360

            
                Widget:
                    size_hint_y: 0.1


                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: 0.7  
                    spacing: 20
                    padding: [10, 10]



                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1  
                        RoundedRectangle:
                            pos: 57, 260
                            size: 290, 150
                            radius: [23]  
                        Color:
                            rgba: (0.87, 0.42, 0.16, 1)
                        Line:
                            points: [58, 335, 346, 335]  
                            width: 1.5  
                    TextInput:
                        id: username_input
                        hint_text: 'Username *'
                        multiline: False
                        font_size: 14
                        background_normal: ''
                        background_color: 1, 1, 1, 1
                        padding: [10, 10]
                        size_hint_y: None
                        height: dp(45)
                        size_hint_x: 0.8
                        pos_hint: {'center_x': 0.5}
                        cursor_color: 0.87, 0.42, 0.16, 1
                        selection_color: 0.87, 0.42, 0.16, 0.5




                    TextInput:
                        id: password_input
                        hint_text: 'Password *'
                        password: True
                        multiline: False
                        font_size: 14
                        background_normal: ''
                        background_color: 1, 1, 1, 1
                        cursor_color: 0.87, 0.42, 0.16, 1
                        selection_color: 0.87, 0.42, 0.16, 0.5
                        padding: [8, 8]
                        size_hint_y: None
                        height: dp(45)
                        size_hint_x: 0.8
                        pos_hint: {'center_x': 0.5}


                Widget:
                    size_hint_y: 0.25


            
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: 0.5  
                    spacing: 20
                    Label:
                        id: error_label
                        text: ""
                        color: 1,1,1,1
                        font_size: 15
                        size_hint_y: None
                        height: dp(30)
                        pos_hint: {'center_x': 0.5}
                    Button:
                        text: 'Sign In'
                        size_hint_x: 0.77
                        size_hint_y: None
                        height: dp(50)
                        font_size: 17
                        background_normal: ''
                        background_color: 0, 0, 0, 0  
                        color: 0.8, 0.4, 0.1, 1
                        pos_hint: {'center_x': 0.5}
                        on_release: root.login()
                        

                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1  
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [23]  
                    Button:
                        text: 'Create account here!'
                        size_hint_x: 0.77
                        size_hint_y: None
                        height: dp(50)  
                        font_size: 17
                        background_normal: ''
                        background_color: 0, 0, 0, 0  
                        color: 1, 1, 1, 1  
                        pos_hint: {'center_x': 0.5}
                        on_release:   app.root.current = 'register_screen'


                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1  
                            Line:
                                width: 1.2  
                                rounded_rectangle: (self.x, self.y, self.width, self.height, dp(23)) 


                    Widget:
                        size_hint_y: 0.1

    # Registration Screen
    ColoredScreen:
        name: 'register_screen'
        id: register_screen

        ScrollView:
            do_scroll_x: False
            do_scroll_y: False

            BoxLayout:
                orientation: 'vertical'
                padding: 20
                spacing: 20
                size_hint_y: None
                height: self.minimum_height

                Image:
                    source: 'logo.png'
                    size_hint: None, None
                    size: 150, 150
                    pos_hint: {'center_x': 0.5}

                TextInput:
                    id: name_input
                    hint_text: 'Name'
                    multiline: False
                    font_size: 20
                    size_hint_y: None
                    height: 50
                    background_normal: ''
                    background_active: ''
                    background_color: 1, 1, 1, 1
                    padding: 10

                TextInput:
                    id: lastname_input
                    hint_text: 'Last Name'
                    multiline: False
                    font_size: 20
                    size_hint_y: None
                    height: 50
                    background_normal: ''
                    background_active: ''
                    background_color: 1, 1, 1, 1
                    padding: 10

                TextInput:
                    id: birthdate_input
                    hint_text: 'Select Birthdate'
                    multiline: False
                    font_size: 20
                    size_hint_y: None
                    height: 50
                    background_normal: ''
                    background_active: ''
                    background_color: 1, 1, 1, 1
                    padding: 10

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 50
                    Label:
                        text: 'Gender'
                        size_hint_x: 0.2
                        font_size: 20
                        color: 1, 1, 1, 1
                    ToggleButton:
                        id: gender_m
                        text: 'M'
                        group: 'gender'
                        size_hint_x: 0.4
                        background_normal: ''
                        background_down: ''
                        background_color: 1, 1, 1, 1
                        color: 0, 0, 0, 1
                    ToggleButton:
                        id: gender_f
                        text: 'F'
                        group: 'gender'
                        size_hint_x: 0.4
                        background_normal: ''
                        background_down: ''
                        background_color: 1, 1, 1, 1
                        color: 0, 0, 0, 1

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 10
                    size_hint_y: None
                    height: 50

                    TextInput:
                        id: city_input
                        hint_text: 'City'
                        multiline: False
                        font_size: 20
                        size_hint_x: 0.5
                        background_normal: ''
                        background_active: ''
                        background_color: 1, 1, 1, 1
                        padding: 10

                    TextInput:
                        id: street_input
                        hint_text: 'Street'
                        multiline: False
                        font_size: 20
                        size_hint_x: 0.5
                        background_normal: ''
                        background_active: ''
                        background_color: 1, 1, 1, 1
                        padding: 10

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 10
                    size_hint_y: None
                    height: 50

                    TextInput:
                        id: house_number_input
                        hint_text: 'House Number'
                        multiline: False
                        font_size: 20
                        size_hint_x: 0.5
                        background_normal: ''
                        background_active: ''
                        background_color: 1, 1, 1, 1
                        padding: 10

                    TextInput:
                        id: postal_code_input
                        hint_text: 'Postal Code'
                        multiline: False
                        font_size: 20
                        size_hint_x: 0.5
                        background_normal: ''
                        background_active: ''
                        background_color: 1, 1, 1, 1
                        padding: 10

                TextInput:
                    id: phone_number_input
                    hint_text: 'Phone Number'
                    multiline: False
                    font_size: 20
                    size_hint_y: None
                    height: 50
                    background_normal: ''
                    background_active: ''
                    background_color: 1, 1, 1, 1
                    padding: 10

                Button:
                    text: 'Continue'
                    size_hint_y: None
                    height: 60
                    font_size: 24
                    background_normal: ''
                    background_color: 0.8157, 0.4510, 0.2549, 1
                    color: 1, 1, 1, 1
                    on_release: app.root.current = 'account_creation_screen'

    # Account Creation Screen
    ColoredScreen:
        name: 'account_creation_screen'
        id: account_creation_screen

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 20

            Image:
                source: 'logo.png'
                size_hint: None, None
                size: 150, 150
                pos_hint: {'center_x': 0.5}

            TextInput:
                id: new_username_input
                hint_text: 'Username'
                multiline: False
                font_size: 20
                size_hint_y: None
                height: 50
                background_normal: ''
                background_active: ''
                background_color: 1, 1, 1, 1
                padding: 10

            TextInput:
                id: new_password_input
                hint_text: 'Password'
                password: True
                multiline: False
                font_size: 20
                size_hint_y: None
                height: 50
                background_normal: ''
                background_active: ''
                background_color: 1, 1, 1, 1
                padding: 10

            TextInput:
                id: confirm_password_input
                hint_text: 'Confirm Password'
                password: True
                multiline: False
                font_size: 20
                size_hint_y: None
                height: 50
                background_normal: ''
                background_active: ''
                background_color: 1, 1, 1, 1
                padding: 10

            Button:
                text: 'Register'
                size_hint_y: None
                height: 60
                font_size: 24
                background_normal: ''
                background_color: 0.8157, 0.4510, 0.2549, 1
                color: 1, 1, 1, 1
                on_release: app.register()
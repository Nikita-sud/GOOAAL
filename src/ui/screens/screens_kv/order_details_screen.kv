#:kivy 2.0.0
# order_details_screen.kv

<OrderDetailsScreen>:
    name: 'order_details_screen'
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)

        # Верхняя панель с кнопкой "Назад"
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            Button:
                text: '< Back'
                size_hint_x: None
                width: dp(80)
                on_release: root.back_to_history()
            Label:
                text: 'Order Details'
                font_size: dp(20)
                halign: 'center'
                valign: 'middle'

        # Информация о заказе
        Label:
            id: order_id_label
            text: ''
            font_size: dp(16)
            halign: 'left'
            valign: 'middle'

        Label:
            id: order_date_label
            text: ''
            font_size: dp(16)
            halign: 'left'
            valign: 'middle'

        Label:
            id: order_status_label
            text: ''
            font_size: dp(16)
            halign: 'left'
            valign: 'middle'

        Label:
            id: total_price_label
            text: ''
            font_size: dp(16)
            halign: 'left'
            valign: 'middle'

        Label:
            text: 'Items:'
            font_size: dp(18)
            halign: 'left'
            valign: 'middle'

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: items_grid
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)
                padding: [dp(5), dp(5)]